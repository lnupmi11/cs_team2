@model xBlogger.Models.UserProfileViewModels.ChanelViewModel

<h4>Chanel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
