@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <div class="nav navbar-right dropdown">
        <button type="button" data-toggle="dropdown" class="btn btn-link navbar-btn dropdown-toggle">
            @UserManager.GetUserName(User)
            <span class="caret"></span>
        </button>
        <ul class="nav dropdown-menu">
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Manage">
                    Profile
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="ChangePassword" title="Manage">
                    Settings
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link scroll-black">Log out</button>
            </li>
        </ul>
    </div>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}

<script type="text/javascript">
    $(document).ready(function(){
      $('.dropdown-submenu a.test').on("click", function(e){
        $(this).next('ul').toggle();
        e.stopPropagation();
        e.preventDefault();
      });
    });
</script>
