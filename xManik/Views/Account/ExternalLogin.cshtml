@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register"; 
}

<h2>@ViewData["Title"]</h2>
<h4>Associate your @ViewData["LoginProvider"] account.</h4>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role"></label>
                <div class="col-md-10">
                    <input asp-for="Email" type="hidden" value="@Model.Email"/>
                    <input asp-for="UserName" type="hidden" value="@Model.UserName"/>
                    <input asp-for="Role" type="radio" value="@UserRole.Admin" /> Admin
                    <input asp-for="Role" type="radio" value="@UserRole.Client" /> Client
                    <input asp-for="Role" type="radio" value="@UserRole.Provider" /> Provider
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
